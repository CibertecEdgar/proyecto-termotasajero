                    </div>
                </nav>
            </header>*@
            <div class="container" style="flex: 1 0 auto;">
                <main role="main" class="pb-3" ">
                    @RenderBody()
                </main>
            </div>
            <footer class="border-top footer text-muted mt-auto" style="flex-shrink: 0;">
                <div class="container">
                    &copy; 2025 - Proyecto Termotasajero - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
<script>
document.addEventListener('DOMContentLoaded', function() {
    var sidebar = document.getElementById('sidebar');
    var toggleBtn = document.getElementById('sidebar-toggle');
    if (toggleBtn) {
        toggleBtn.addEventListener('click', function() {
            if (!sidebar.classList.contains('hide-sidebar')) {
                sidebar.style.transition = 'width 0.3s, min-width 0.3s, opacity 0.3s, visibility 0.3s';
                sidebar.style.width = '0';
                sidebar.style.minWidth = '0';
                sidebar.style.opacity = '0';
                sidebar.style.visibility = 'hidden';
                setTimeout(function() {
                    sidebar.classList.add('hide-sidebar');
                }, 300);
            } else {
                sidebar.classList.remove('hide-sidebar');
                sidebar.style.transition = 'width 0.3s, min-width 0.3s, opacity 0.3s, visibility 0.3s';
                sidebar.style.width = '250px';
                sidebar.style.minWidth = '';
                sidebar.style.opacity = '1';
                sidebar.style.visibility = 'visible';
            }
        });
    }
});
</script>
</body>
</html>
